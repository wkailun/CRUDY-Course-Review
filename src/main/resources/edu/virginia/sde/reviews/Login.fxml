<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="360.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.LoginController">
    <children>
        <Label layoutX="30.0" layoutY="30.0" text="Sign in" />
        <Label layoutX="60.0" layoutY="60.0" text="Username:" />
        <TextField fx:id="usernameField" layoutX="130.0" layoutY="60.0" prefHeight="25.0" prefWidth="150.0" />
        <Label layoutX="60.0" layoutY="90.0" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="130.0" layoutY="90.0" prefHeight="25.0" prefWidth="150.0" />
        <Button layoutX="80.0" layoutY="120.0" mnemonicParsing="false" onAction="#loginButtonAction" text="Login" />
        <Label fx:id="messageLabel" layoutX="60.0" layoutY="160.0" />

        <Label layoutX="30.0" layoutY="200.0" text="Create New Account" />
        <Label layoutX="60.0" layoutY="230.0" text="Username:" />
        <TextField fx:id="newUsernameField" layoutX="130.0" layoutY="230.0" prefHeight="25.0" prefWidth="150.0" />
        <Label layoutX="60.0" layoutY="260.0" text="Password:" />
        <PasswordField fx:id="newPasswordField" layoutX="130.0" layoutY="260.0" prefHeight="25.0" prefWidth="150.0" />
        <Button layoutX="80.0" layoutY="290.0" mnemonicParsing="false" onAction="#createAccountButtonAction" text="Create Account" />
        <Label fx:id="newAccountMessageLabel" layoutX="60.0" layoutY="320.0" />
    </children>
</AnchorPane>