<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>


<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.MyReviewsScreenController">
    <VBox alignment="CENTER" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.bottomAnchor="40.0" AnchorPane.topAnchor="20.0" spacing="10" VBox.vgrow="ALWAYS">
        <Label text="My Reviews">
            <font>
                <Font name="Tamil MN Bold" size="48.0"/>
            </font>
        </Label>

        <TableView fx:id="myReviewsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="courseMnemonicColumn" prefWidth="75.0" text="Course Mnemonic"/>
                <TableColumn fx:id="courseNumberColumn" prefWidth="75.0" text="Course Number"/>
                <TableColumn fx:id="ratingColumn" prefWidth="75.0" text="Course Rating"/>
                <TableColumn fx:id="messageColumn" prefWidth="75.0" text="Message"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <Button fx:id="backButton" onAction="#backButtonAction" mnemonicParsing="false" text="Back to Course Search Screen"/>

    </VBox>
</AnchorPane>