<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.layout.HBox?>


<AnchorPane prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.LoginScreenController">
    <VBox alignment="CENTER" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.bottomAnchor="40.0" AnchorPane.topAnchor="10.0" spacing="10" VBox.vgrow="ALWAYS">
        <children>
            <TextFlow layoutX="144.0" layoutY="165.0" prefHeight="17.0" prefWidth="66.0" />

            <Text layoutX="254.0" layoutY="81.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Login">
                <font>
                    <Font name="Tamil MN Bold" size="48.0" />
                </font>
            </Text>


            <Text fill="#9f9f9f" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome! " textAlignment="CENTER" wrappingWidth="229.720703125" />     <!-- temp  -->

            <Label alignment="CENTER" style="&#10;" text="Username:" textAlignment="CENTER" wrapText="false">
                <font>
                    <Font name="LiHei Pro" size="14.0" />
                </font>
            </Label>

            <TextField fx:id="userid"  prefHeight="26.0" prefWidth="265.0" promptText="enter username">
                <font>
                    <Font name="Lao Sangam MN" size="13.0" />
                </font>
            </TextField>

            <Label alignment="CENTER" prefHeight="18.0" prefWidth="117.0" style="&#10;" text="Password:" textAlignment="CENTER" wrapText="false">
                <font>
                    <Font name="LiHei Pro" size="14.0" />
                </font>
            </Label>

            <TextField fx:id="passid" prefHeight="26.0" prefWidth="265.0" promptText="enter password">
                <font>
                    <Font name="Lao Sangam MN" size="13.0" />
                </font>
            </TextField>

            <HBox alignment="CENTER" spacing="50">
                <Button fx:id="loginbutton" alignment="CENTER" mnemonicParsing="false" onAction="#loginButtonAction" text="Login">
                    <font>
                        <Font name="LiHei Pro" size="13.0" />
                    </font>
                </Button>
                <Button fx:id="registerbutton" alignment="CENTER" mnemonicParsing="false" onAction="#registerButtonAction" text="Register">
                    <font>
                        <Font name="LiHei Pro" size="13.0"/>
                    </font>
                </Button>
            </HBox>


            <Label fx:id="warninglabel" alignment="TOP_CENTER" contentDisplay="TOP" layoutX="115.0"
                   layoutY="283.0" prefHeight="17.0" prefWidth="410.0">
                <font>
                    <Font name="Lao Sangam MN" size="13.0"/>
                </font>
            </Label>
        </children>
    </VBox>
</AnchorPane>
