<AnchorPane prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.CourseSearchScreenController">
    <VBox alignment="CENTER" spacing="20" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="40.0">
        <Text textAlignment="CENTER" strokeType="OUTSIDE" strokeWidth="0.0" text="Course Search">
            <font>
                <Font name="Tamil MN Bold" size="48.0" />
            </font>
        </Text>

        <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <TableView fx:id="tableCourses" prefHeight="276.0" prefWidth="288.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn prefWidth="75.0" text="C1"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
                <Button fx:id="searchForCourseButton" mnemonicParsing="false"
                        prefHeight="25.0" onAction="#searchForCourseButtonAction" prefWidth="259.0" text="Search"/>
                <Button fx:id="courseToListButton" mnemonicParsing="false" prefHeight="25.0"
                        prefWidth="259.0" onAction="#searchForCourseButtonAction" text="Add Course to List"/>
                <Button fx:id="courseReviewsButton" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="259.0" onAction="#courseReviewsButtonAction" text="View Course"/>
                <Button fx:id="myReviewsButton" mnemonicParsing="false" prefHeight="25.0"
                        prefWidth="259.0" onAction="#myReviewsButtonAction" text="My Reviews"/>
                <Button fx:id="logoutButton" mnemonicParsing="false" prefHeight="25.0"
                        prefWidth="259.0" onAction="#logoutButtonAction" text="Logout"/>
            </VBox>
        </HBox>
        <Button fx:id="resetTable" layoutX="87.0" layoutY="366.0" mnemonicParsing="false" onAction="#resetTableOnAction" prefHeight="25.0" prefWidth="195.0" text="Reset Table" />
    </VBox>
</AnchorPane>

